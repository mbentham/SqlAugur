{
  "SqlServerMcp": {
    "Servers": {
      "local-windows-auth": {
        "ConnectionString": "Server=localhost;Database=master;Integrated Security=True;TrustServerCertificate=False;Encrypt=True;"
      },
      "azure-managed-identity": {
        "ConnectionString": "Server=myserver.database.windows.net;Database=master;Authentication=Active Directory Managed Identity;TrustServerCertificate=False;Encrypt=True;"
      },
      "sql-auth-with-env-var": {
        "ConnectionString": "Server=myserver;Database=master;User Id=sqlreader;Password=${SQL_PASSWORD};TrustServerCertificate=False;Encrypt=True;"
      }
    },
    "MaxRows": 1000,
    "CommandTimeoutSeconds": 30,
    "EnableDbaTools": false
  }
}
